{
  "name": "builds-widget",
  "version": "0.1.0",
  "description": "",
  "main": "dist/index.js",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.m.js",
  "source": "app/widget/index.js",
  "scripts": {
    "test": "NODE_ENV=test jest",
    "build": "preact build --no-prerender --clean --template src/index.ejs --service-worker false",
    "serve": "preact serve",
    "dev": "preact watch --port 3000 --template src/index.ejs",
    "dist": "microbundle --entry src/app/widget/index.js"
  },
  "keywords": [],
  "author": "Lloyd Jones <lj@mobalyticshq.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.13.8",
    "@babel/plugin-proposal-decorators": "^7.13.5",
    "@babel/plugin-transform-object-assign": "^7.12.13",
    "@babel/plugin-transform-react-constant-elements": "^7.13.10",
    "@babel/plugin-transform-react-jsx": "^7.12.17",
    "@babel/preset-env": "7.13.10",
    "babel-plugin-jsx-pragmatic": "^1.0.2",
    "babel-plugin-macros": "^3.0.1",
    "babel-plugin-transform-goober": "^1.2.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "eslint": "^7.22.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "microbundle": "^0.13.0",
    "node-sass": "^5.0.0",
    "preact-cli": "^3.0.0",
    "preact-render-to-string": "^5.1.16",
    "sass-loader": "^10.1.1",
    "tailwindcss": "^2.0.4",
    "twin.macro": "^2.3.0"
  },
  "dependencies": {
    "goober": "^2.0.35",
    "preact": "^10.5.13",
    "preact-compat": "^3.19.0",
    "preact-habitat": "^3.3.0",
    "preact-render-to-string": "^5.1.16"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "testEnvironment": "node",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss|less)$": "identity-obj-proxy",
      "^react$": "preact-compat",
      "^react-dom$": "preact-compat"
    },
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  },
  "babelMacros": {
    "twin": {
      "preset": "goober"
    }
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "maintained node versions"
  ]
}